{
  "name": "plist-action",
  "version": "1.0",
  "private": true,
  "description": "Convert between plist and json",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --minify --license licenses.txt",
    "test": "jest",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rosingrind/plist-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "plist",
    "json"
  ],
  "author": "rosingrind",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@types/plist": "^3.0.2",
    "plist": "^3.0.6"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "@typescript-eslint/parser": "^6.2.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.46.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.2",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
